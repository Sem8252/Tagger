<Window x:Class="Tagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tagger"
        mc:Ignorable="d"
        Title="Tagger" Height="150.742" Width="382.773" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="ButtonPath" Content="Выбрать папку" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="99" Click="ButtonPath_Click"/>
        <CheckBox x:Name="CheckBoxSubDirectory" Content="Подпапки" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Checked="CheckBoxSubDirectory_Checked" Unchecked="CheckBoxSubDirectory_Unchecked"/>
        <Label x:Name="PathLabel" Content="Путь" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="TextBoxTag" HorizontalAlignment="Left" Height="23" Margin="114,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddTagButton" Content="Добавить тег" HorizontalAlignment="Left" Margin="114,61,0,0" VerticalAlignment="Top" Width="120" Click="AddTagButton_Click"/>
        <ComboBox x:Name="TagListComboBox" HorizontalAlignment="Left" Margin="239,34,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="DeleteTagButton" Content="Удалить тег" HorizontalAlignment="Left" Margin="239,61,0,0" VerticalAlignment="Top" Width="120" Click="DeleteTagButton_Click"/>
        <Button x:Name="ButtonFix" Content="Исправить" HorizontalAlignment="Left" Margin="114,86,0,0" VerticalAlignment="Top" Width="120" Click="ButtonFix_Click"/>

    </Grid>
</Window>
